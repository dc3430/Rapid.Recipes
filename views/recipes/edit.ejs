<body>
    <h1 class = "header">Edit Recipe | Rapid Recipes</h1>
        <nav class = "nav1">
            <a href="/recipes">Home</a>
            <a href="/logout"><i class="logout"></i>Log Out</a>
        </nav>

    <form action="/recipes/<%=recipe._id%>" method="POST">
        <label>Title: 
        <textarea name="title" rows="2" cols="20"><%= recipe.title %></textarea>
        </label>

        <label>Instructions: 
            <textarea name="instruction" rows="2" cols="20"><%= recipe.title %></textarea>
        </label>
        <button type="submit">Add Recipe</button>
    </form>
